// You are using Java
import java.util.*;
class Main
{
 public static void main(String args[]){    
  int i,flag=0;      
  int n;    
  Scanner in = new Scanner(System.in);
  n=in.nextInt();
  if(n==0||n==1)
  {  
   System.out.println(n+" is not prime number");      
  }else
  {  
   for(i=2;i<=Math.sqrt(n);i++)
   {      
    if(n%i==0)
    {      
     System.out.println(n+" is not prime number");      
     flag=1;      
     break;      
    }      
   }      
   if(flag==0)  
   { 
       System.out.println(n+" is prime number"); 
       
   }  
  }
}    
}   

