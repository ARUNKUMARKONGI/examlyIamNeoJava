import java.util.*;

class Main{
    public static void main(String args[])
    {
        Scanner sc = new Scanner(System.in);
        int adult = sc.nextInt();
        int child = sc.nextInt();
        int legs = sc.nextInt();
        if((adult+child)*2==legs)
        System.out.println("yes");
        else System.out.println("no");
    }
}
