import java.util.Scanner;

public class Main {
    public static void main(String[] args) {
        Scanner in = new Scanner(System.in);
        int n = in.nextInt();
        int[] array = new int[n];

        for (int i = 0; i < n; i++) {
            array[i] = in.nextInt();
        }

        int sum = 0;
        int product = 1;
        for (int i = 0; i < n; i++) {
            sum += array[i];
            product *= array[i];
        }
  
        if (sum % 2 == 0) {
            System.out.println("Sum of the elements is even: " + sum);
        } else {
            System.out.println("Product of the elements is odd: " + product);
        }
    }
}
